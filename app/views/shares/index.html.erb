<div class="row mt">
    <div class="col-lg-12">
        <a class="btn btn-primary pull-right" href="<%= new_survey_share_path(@survey) %>"><i class="fa fa-plus"></i><span>Share</span></a>
    </div>
    <div class="col-lg-12">
        <div class="form-panel">
            <h4><i class="fa fa-angle-right"></i> Shares For Survey: <%= @survey.name%></h4>
            <table id="_cpt_table_list" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    <% if @shares.empty? %>
                        <tr> No data available </tr>
                    <% else %>
                        <% @shares.each_with_index do |share, index| %>
                            <tr>
                                <td><%= index+=1 %></td>
                                <td><%= share.email %></td>
                                <td><%= link_to "Edit", edit_survey_share_path(@survey,share) %></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>