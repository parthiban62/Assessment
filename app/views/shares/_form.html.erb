<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Share Survey Via Email</h4>
            <%= form_for([@survey, @share], :html => {class: 'form-horizontal style-form'}) do |f| %>
                <div class="form-group">
                    <div class=" col-lg-12">
                        <label class="col-sm-2 col-sm-2 control-label">Email:</label>
                        <div class="col-sm-10">
                          <%= f.text_field :email, class:"form-control",required: true %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-lg-12">
                        <label class="col-sm-2 col-sm-2 control-label"></label>
                        <div class="col-sm-5">
                          <button class="btn btn-theme02 btn-block" href="#" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>