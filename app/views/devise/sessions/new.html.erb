<div id="login-page">
    <div class="container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-login'})  do |f| %>
          <h2 class="form-login-heading">sign in now</h2>
          <div class="login-wrap">
            <%= f.email_field :email, autofocus: true, :id => "form-email", :class => "form-control", :placeholder => "Email Address", required: true %>
            <br>
            <%= f.password_field :password, autocomplete: "off", :id => "form-last-name", :class => "form-control", :placeholder => "Password...", required: true %>
            <label class="checkbox">
              <span class="pull-right">
                <label>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, :style => "font-weight:bolder;" %>
                </label>
              </span>
            </label>
            <button class="btn btn-theme btn-block" href="#" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>
            <hr>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
    </div>
</div>
