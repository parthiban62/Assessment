<div class="fields">
  <div class="form-group">
    <div class="row">
      <div class="col-lg-10">
        <div class="col-lg-6">
          <label class="col-sm-2 col-sm-2 control-label">QType:</label>
          <div class="col-sm-10">
            <%= f.collection_select(:question_type_id, QuestionType.order(:created_at), :id, :name, {prompt: true}, {class: 'form-control question_type_id', required: "required"})%>
          </div>
          </div>
        </div>
      </div>
    </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-10">
        <div class="col-lg-6">
          <label class="col-sm-2 col-sm-2 control-label">Question:</label>
          <div class="col-sm-10">
            <%= f.text_area :question_content,size: "40x3", class:"form-control", required: true%>
          </div>
          </div>
        </div>
    </div>
  </div>
</div>

<%= f.fields_for :options do |builder| %>
	<%= render 'shared/option_fields', f: builder %>
<% end %>

<div class="fields">
  <div class="form-group">
  	<div class="col-lg-12">
  		<%= link_to_add_fields "Add Option", f, :options, 'form-control' %>
  	</div>
  </div>
</div>