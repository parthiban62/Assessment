<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4><i class="fa fa-angle-right"></i> Participants For the survey <%= @survey.name %></h4>
            <table id="_cpt_table_list" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Name</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    <% if @responses.empty? %>
                        <tr> No data available </tr>
                    <% else %>
                        <% @responses.each_with_index do |response, index| %>
                            <tr>
                                <td><%= index+=1 %></td>
                                <td><%= response.user.email %></td>
                                <td><%= link_to "View Response", survey_response_path(@survey, response) %></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>