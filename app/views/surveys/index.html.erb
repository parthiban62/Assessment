<div class="row mt">
    <div class="col-lg-12">
        <a class="btn btn-primary pull-right" href="<%= new_survey_path %>"><i class="fa fa-plus"></i><span>Create New Survey</span></a>
    </div>  
    <div class="col-lg-12">
        <div class="form-panel">
            <h4><i class="fa fa-angle-right"></i> Surveys</h4>
            <table id="_cpt_table_list" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Manage</th>
                        <th>Manage</th>
                        <% if current_user.is_admin? %>
                            <th>Manage</th>
                        <% end %>
                    </tr>
                </thead>
                <tbody>
                    <% if @surveys.empty? %>
                        <tr> No data available </tr>
                    <% else %>
                        <% @surveys.each do |survey| %>
                            <tr>
                                <td><%= survey.id %></td>
                                <td><%= survey.name %></td>
                                <td><%= link_to "View", survey_path(survey) %> / <%= link_to "Edit", edit_survey_path(survey) %> / <%= link_to "Delete", survey_path(survey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                <td><%= link_to "Share Via Email", share_survey_survey_path(survey) %></td>
                                <td><%= link_to "View All Participants", participants_survey_path(survey) %></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade row shareSurvey" role="dialog">
    <div class="col-lg-12">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Share Survey Via Email</h4>
                </div>
                <div class="modal-body">
                    <%= form_for(:survey, url: survey_via_email_surveys_path, :html => {class: 'form-horizontal style-form', remote: true}) do |f| %>
                    <div class="form-group">
                        <div class="col-lg-8">
                            <label class="col-sm-2 col-sm-2 control-label">Question No:</label>
                            <div class="col-sm-10">
                              <%= text_field_tag "survey[email]", "", class:"form-control"%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-theme02 close-popup" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-theme02">Save</button>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>