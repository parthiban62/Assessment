<div class="row mt">
    <div class="col-lg-12">
        <a class="btn btn-primary pull-right" href="<%= new_survey_path %>"><i class="fa fa-plus"></i><span>Create New Survey</span></a>
    </div>  
    <div class="col-lg-12">
        <div class="form-panel">
            <h4><i class="fa fa-angle-right"></i> Surveys</h4>
            <table id="_cpt_table_list" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Manage</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    <% if @surveys.empty? %>
                        <tr> No data available </tr>
                    <% else %>
                        <% @surveys.each do |survey| %>
                            <tr>
                                <td><%= survey.id %></td>
                                <td><%= survey.name %></td>
                                <td><%= link_to "View", survey_path(survey) %> / <%= link_to "Edit", edit_survey_path(survey) %> / <%= link_to "Delete", survey_path(survey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                <td><%= link_to "Share Via Email", survey_shares_path(survey) %></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>