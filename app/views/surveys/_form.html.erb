<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Create New Survey</h4>
            <%= form_for(@survey, :html => {class: 'form-horizontal style-form'}) do |f| %>
                <div class="form-group">
                    <div class=" col-lg-12">
                        <label class="col-sm-2 col-sm-2 control-label">Name:</label>
                        <div class="col-sm-10">
                          <%= f.text_field :name, class:"form-control" %>
                          <span class="error"><%= @errors && @errors[:name] && @errors[:name][0]%></span>
                        </div>
                    </div>
                </div>
                <%= f.fields_for :questions do |builder| %>
                  <%= render 'shared/question_fields', f: builder %>
                <% end %>
                <%= link_to_add_fields 'Add Question', f, :questions, 'form-control' %>
                <div class="form-group">
                    <div class=" col-lg-12">
                        <label class="col-sm-2 col-sm-2 control-label"></label>
                        <div class="col-sm-5">
                          <button class="btn btn-theme02 btn-block" href="#" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>