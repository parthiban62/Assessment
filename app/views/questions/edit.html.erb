<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Edit Question</h4>
            <%= form_for([@survey, @question], :html => {class: 'form-horizontal style-form'}) do |f| %>
                <%= render 'shared/question_fields', f: f %>
                <div class="form-group">
                    <div class=" col-lg-12">
                        <label class="col-sm-2 col-sm-2 control-label"></label>
                        <div class="col-sm-5">
                          <button class="btn btn-theme02 btn-block" href="#" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        function remove_fields(link) {
          $(link).prev("input[type=hidden]").val("1");
          $(link).closest(".fields").hide();
        }
        $('form').on('click', '.add_fields', function(event) {
          var regexp, time;
          time = new Date().getTime();
          regexp = new RegExp($(this).data('id'), 'g');
          $(this).before($(this).data('fields').replace(regexp, time));
          return event.preventDefault();
        });
    });
</script>